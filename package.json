{
  "name": "fh-api2-app",
  "description": "Facility Hero API server v2",
  "private": true,
  "version": "2.0.0",
  "main": "server/server.ts",
  "scripts": {
    "start": "node --require ts-node/register server/server.ts",
    "test": "nyc jasmine JASMINE_CONFIG_PATH=./jasmine.json",
    "test:ci": "npm run lint && npm run jasmine && nsp check",
    "lint": "tslint --type-check --project tsconfig.json \"./server/**/*.ts\"",
    "freeze": "npm shrinkwrap --dev",
    "docs": "hads -o"
  },
  "dependencies": {
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.56",
    "@types/mongoose": "^4.7.8",
    "@types/node": "^7.0.5",
    "@types/winston": "^2.2.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "config": "^1.25.1",
    "cors": "^2.8.1",
    "express-winston": "^2.3.0",
    "feathers": "^2.1.1",
    "feathers-authentication": "^1.1.1",
    "feathers-authentication-jwt": "^0.3.1",
    "feathers-authentication-local": "^0.3.3",
    "feathers-errors": "^2.5.0",
    "feathers-hooks": "^2.0.1",
    "feathers-hooks-common": "^3.2.0",
    "feathers-mongoose": "^5.0.3",
    "feathers-permissions": "^0.1.1",
    "feathers-rest": "^1.7.1",
    "feathers-swagger": "^0.4.0",
    "helmet": "^3.4.1",
    "jasmine": "^2.5.3",
    "jasmine-spec-reporter": "^4.1.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.8.5",
    "multer": "^1.3.0",
    "passport": "^0.3.2",
    "serve-favicon": "^2.4.1",
    "ts-node": "^3.0.2",
    "tslint": "^5.2.0",
    "typescript": "^2.2.1",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6",
    "winston-graylog2": "^0.6.0"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.43",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "hads": "^1.3.2",
    "jasmine": "^2.5.3",
    "jasmine-spec-reporter": "^3.2.0",
    "nsp": "^2.6.2",
    "nyc": "^10.1.2",
    "pofile": "^1.0.2",
    "proxyquire": "^1.7.11",
    "supertest": "^3.0.0",
    "tslint": "^4.5.1"
  },
  "engines": {
    "node": ">=5.0.0"
  },
  "nyc": {
    "reporter": [
      "cobertura",
      "html",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.mock.ts"
    ],
    "cache": true,
    "sourceMap": false,
    "report-dir": "./reports/coverage"
  }
}
